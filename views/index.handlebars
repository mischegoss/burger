<div class='container'>
    <div class='col-sm-3'></div>
    <div class='col-sm-4'>
        <list>
            {{#each burger}}
                {{#unless devoured}}
                    <li>
                        {{id}}. {{burger_name}}
                        <button type="button" class="btn btn-primary devour" data-id="{{id}}" data-devoured="{{devoured}}">Devour</button>
                    </li>
                {{/unless}}
            {{/each}}
        </list>
    </div>

    <div class='col-sm-3'>
        <list>
            {{#each burger}}
                {{#if devoured}}
                    <li>
                        {{id}}. {{burger_name}}
                    </li>
                {{/if}}
            {{/each}}
        </list>
    </div>
</div>

<div class="container center">
    <h2>Add A Burger</h2>
    <form class='create-form'>
        <div class="form-group">
            <label for="burg">Enter burger:</label>
            <input type="text" id="burg">
        </div>
        <button type="submit" id="submit_burger">Add</button>
    </form>

</div>
